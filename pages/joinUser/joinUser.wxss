/* pages/joinUser/joinUser.wxss */
.container {
  padding: 20rpx;
}
.container .joiner {
  text-align: center;
  font-size: 28rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #666;
}
.container .user-head-img {
  padding-top: 20rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}
.container .user-head-img .img{
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
}
.container .user-head-img .img image{
  width: 100%;
  height: 100%;
}
.container .loading-text {
  padding: 40rpx 0;
  font-size: 30rpx;
  color: rgb(81, 121, 180);
  text-align: center;
}