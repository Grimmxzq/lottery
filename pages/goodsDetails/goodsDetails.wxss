/* pages/goodsDetails/goodsDetails.wxss */

.goods-details-body {
  background-color: #ddd;
}
.headers {
  margin-bottom: 20rpx;
}
.headers .imgs{
  width: 100%;
  height: 350rpx;
}
.headers .prize-info{
  padding: 20rpx;
  position: relative;
  background-color: #fff;
}
.headers .prize-info .title{
  font-size: 30rpx;
  height: 100rpx;
  padding-top: 10rpx;
}
.headers .prize-info .times{
  font-size: 26rpx;
  color: #999;
}
.headers .prize-info .tuan{
  background-color: #f1341c;
  color: #fff;
  font-size: 28rpx;
  padding: 1rpx 6rpx 1rpx 6rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
/* 赞助商 */
.sponsor {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 0 20rpx 20rpx 20rpx;
}
.sponsor .name {
  justify-content: space-between;
  font-size: 28rpx;
  height: 80rpx;
  align-items: center;
}
.sponsor .name .left-title{
  align-items: center;
}
.sponsor .name .left-title image{
  width: 40rpx;
  height: 40rpx;
}
.sponsor .content {
  background-color: antiquewhite;
  font-size: 26rpx;
  padding: 20rpx;
  color: rgb(107, 94, 38);
  line-height: 55rpx;
}
/* 奖品介绍 */
.prize-introduce {
  padding: 40rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.prize-introduce .title{
  font-size: 30rpx;
}
.prize-introduce .content{
  padding-top: 20rpx;
  font-size: 28rpx;
  line-height: 55rpx;
}
/* 参与抽奖 */
.join-prize {
  padding: 40rpx 20rpx 30rpx 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.join-prize .join {
  -moz-animation: sunny 2s linear infinite;
  -ms-animation: sunny 2s linear infinite;
  -webkit-animation: sunny 2s linear infinite;
  animation: sunny 2s linear infinite;
  width: 100px;
  height: 100px;
  box-shadow: 0 0 10px 5px #ff8271;
}
.join-prize .join-num {
  width: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 20rpx 0;
  height: 50rpx;
  line-height: 50rpx;
}
.join-prize .pic {

}
.join-prize .pic image{
  width: 60rpx;
  height: 60rpx;
  margin: 0 5rpx;
}

.animation-zoom {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  border: 1px solid #f1341c;
  background-color: #f1341c;
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
}

@-webkit-keyframes sunny {
  0% {
    box-shadow: 0 0 10px 5px #ff8271;
  }
  50% {
    box-shadow: 0 0 0 0 #ff8271;
  }
  100%{
    box-shadow: 0 0 10px 5px #ff8271;
  }
}
@keyframes sunny {
  0% {
    box-shadow: 0 0 10px 5px #ff8271;
  }
  50% {
    box-shadow: 0 0 0 0 #ff8271;
  }
  100%{
    box-shadow: 0 0 10px 5px #ff8271;
  }
}

/* 我要上首页 */
.index-top {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding-top: 30rpx;
  min-height: 80rpx;
  line-height: 50rpx;
}
.bootom-height {
  height: 100rpx;
}
/* 底部定位 */
.position-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.position-bottom .bottom-left {
  width: 20%;
  height: 100rpx;
  justify-content: center;
  align-items: center;
}
.position-bottom .bottom-left image{
  width: 50rpx;
  height: 50rpx;
}
.position-bottom .bottom-right {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.position-bottom .bottom-right .join-button{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f1341c;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  border-radius: 50rpx;
}