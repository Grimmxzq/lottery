/* components/login/login.wxss */
.login-container {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.login-container .box {
  width: 80%;
  height: 500rpx;
  background-color: #fff;
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.login-container .box .header {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  top: -100rpx;
  border: 10rpx solid #fff;
}
.login-container .box .header .img{
  width: 100%;
  height: 100%;
}
.login-container .box .msg {
  padding-top: 150rpx;
  text-align: center;
}
.login-container .box .msg .not-login-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.login-container .box .msg .tip {
  padding-top: 10rpx;
  font-size: 26rpx;
  color: #666;
}
.login-container .box .login-button {
  padding-top: 60rpx;
}
.login-container .box .cancel-button {
  padding-top: 20rpx;
}
.login-container .box .common {
  /* padding-top: 70rpx; */
  height: 70rpx;
}
.login-container .box .common .login{
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f1341c;
  border-radius: 100px;
  color: #fff;
  font-size: 30rpx;
}
.login-container .box .common .cancel{
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 100px;
  color: #666;
  font-size: 30rpx;
  border: 1rpx solid #ccc;
  background-color: #fff;
}