page {
  height: 100%;
  background-color: #ededed;
}

.font-color-gray {
  color: gray;
}

.iphonex-bottom {
  /* 若果是iphoneX 就离底部34px */
  padding-bottom:34px; 
}

.padding-top-large {
  padding-top: 60rpx;
}

.padding-top-middle {
  padding-top: 40rpx;
}

.padding-top-base {
  padding-top: 20rpx;
}

.padding-base {
  padding: 20rpx;
}

.margin-base {
  margin: 20rpx;
}

.padding-middle {
  padding: 30rpx;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.full-width {
  width: 100%;
}

.full-height {
  height: 100%;
}

.flex {
  display: flex;
}

.line-one {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.line-more {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.button-style-close {
  padding: 0;
  border: 0;
}