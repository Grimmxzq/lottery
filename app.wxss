page {
  height: 100%;
  background-color: #ededed;
}

.font-color-gray {
  color: gray;
}

.iphonex-bottom {
  /* 若果是iphoneX 就离底部34px */
  padding-bottom:34px; 
}

.full-width {
  width: 100%;
}

.full-height {
  height: 100%;
}

.flex {
  display: flex;
}

.line-one {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.line-more {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.button-style-close {
  padding: 0;
  border: 0;
}